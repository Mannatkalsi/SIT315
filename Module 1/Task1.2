#define ledR 8
#define ledG 7
#define ledB 12

int interrCount = 0;

void setup() {
  
  
  pinMode (ledR, OUTPUT);
  pinMode (ledG, OUTPUT);
  pinMode (ledB, OUTPUT);
  
  digitalWrite( ledR,0);
  digitalWrite( ledG,0);
  digitalWrite( ledB,0);
  
  attachInterrupt(0, interruptChange, RISING);
  Serial.begin(96000);
}

void loop() {
  interrCount++;
  
  digitalWrite( ledR,1);
  digitalWrite( ledG,0);
  delay(500);
  
  digitalWrite( ledR,0);
  digitalWrite( ledG,1);
  delay(500);
  
  if( interrCount == 10) {
    interrCount = 0;
    digitalWrite( ledB,0);
    Serial.println(" Inactive ");
  }
}

void interruptChange() {
  digitalWrite( ledB,1);
  Serial.println("Interrupted");
}
